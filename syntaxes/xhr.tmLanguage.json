{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "xhr",
	"patterns": [
		{"include": "#keywords"},
		{"include": "#comments"},
		{"include": "#strings"},
		{"include": "#functions"},
		{"include": "#types"},
		{"include": "#numbers"},
		{"include": "#variables"}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.xhr",
				"match": "\\b(if|while|do|end)\\b"
			}]
		},
        "strings": {
            "name": "string.quoted.double.xhr",
            "begin": "\"",
            "end": "\"|$"
        },
		"comments": {
			"name": "comment.line.number-sign.xhr",
			"begin": "#",
			"end": "$"
		},
        "functions": {
            "patterns": [{
                "name": "support.function.xhr",
                "match": "\\b(print|scan|dup|2dup|swap|rot)\\b|\\+|\\-|\\*|\\/|=|!=|>|<|<=|>=|\\*\\*"
            }]
        },
        "types": {
            "patterns": [{
                "name": "support.type.xhr",
                "match": "\\b(int|float|str)\\b"
            }]
        },
        "numbers": {
            "patterns": [{
                "name": "constant.numeric.xhr",
                "match": "(\\b\\d+|\\b\\d+\\.\\d*|\\.\\d*)\\b"
            }]
        },
        "variables": {
            "name": "variable.other.xhr",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
	},
	"scopeName": "source.xhr"
}